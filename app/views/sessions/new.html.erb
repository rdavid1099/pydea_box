<h3>IdeaBox</h3>
<%= form_tag '/login', method: :post %>
<%= label_tag 'Email Address' %><br>
<%= text_field_tag 'email', placeholder: 'Email Address' %><br>
<%= label_tag 'Password' %><br>
<%= password_field_tag 'password', placeholder: 'Password' %><br>
<%= submit_tag 'Login' %>
<p>Don't have an account? <%= link_to 'Sign up', new_user_path %></p>
